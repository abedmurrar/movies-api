<div class="modal fade" id="myModal">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Add New Movie</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">

                <!-- Form -->
                <form id="rendered-form">
                    <div class="rendered-form">

                        <!-- Movie Name -->
                        <div class="fb-text form-group">
                            <label for="nameInput" class="fb-text-label">Movie Name</label>
                            <input type="text" placeholder="E.g.: The Avengers" class="form-control" id="name" name="nameInput">
                        </div>

                        <!-- Age Rating -->
                        <div class="fb-select form-group">
                            <label for="ageSelect" class="fb-select-label">Age Rating</label>
                            <select class="form-control" name="ageSelect" id="age_rating">
                                <option value="PG">PG</option>
                                <option value="PG-13" selected="true">PG-13</option>
                                <option value="R">R</option>
                                <option value="NC-17">NC-17</option>
                                <option value="Not rated">Not rated</option>
                            </select>
                        </div>

                        <!-- Rating -->
                        <div class="fb-number form-group">
                            <label for="numberInput" class="fb-number-label">Rating</label>
                            <input type="number" class="form-control" name="numberInput" value="3.7" min="0" max="10" step="0.1" id="user_rating">
                        </div>

                        <!-- Year -->
                        <div class="fb-number form-group">
                            <label for="numberInput" class="fb-number-label">Year</label>
                            <input type="number" placeholder="2018" class="form-control" name="numberInput" step="1" id="year">
                        </div>

                        <!-- Category -->
                        <div class="fb-text form-group">
                            <label for="text-1525984437093" class="fb-text-label" data-toggle="tooltip" title="Insert Them Space Separated">Category
                            </label>
                            <input type="text" placeholder="E.g.: Action Adventure Comedy" class="form-control" name="text-1525984437093" id="category"
                                title="Insert Them space separated">
                        </div>

                        <!-- Language -->
                        <div class="fb-text form-group">
                            <label for="text-1525984573951" class="fb-text-label">Language</label>
                            <input type="text" placeholder="E.g.: English" class="form-control" name="text-1525984573951" id="language">
                        </div>

                        <!-- Poster -->
                        <div class="fb-file form-group">
                            <label for="poster" class="fb-file-label">Poster Image</label>
                            <input type="file" placeholder="Path" class="form-control" name="poster" id="poster_dir">
                        </div>
                    </div>
                </form>
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type='button' class='btn btn-success' onclick="addMovie(this)">Add</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>